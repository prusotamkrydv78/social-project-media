<!-- Create Post Header -->
<div class="mb-6">
  <h1 class="text-3xl font-bold bg-gradient-to-r from-primary-500 to-secondary-500 text-transparent bg-clip-text">Create Post</h1>
  <p class="text-dark-500 mt-2">Share your moments with the world</p>
</div>

<!-- Create Post Form -->
<div class="bg-white rounded-2xl shadow-sm overflow-hidden mb-6">
  <div class="p-6">
    <!-- Header with Actions -->
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-semibold text-dark-900">New Post</h2>

      <div class="flex space-x-2">
        <button class="bg-dark-100 text-dark-700 px-4 py-2 rounded-lg hover:bg-dark-200 transition-colors shadow-sm">
          <i class="fas fa-save mr-2"></i>
          Save Draft
        </button>
        <button class="bg-primary-500 text-white px-4 py-2 rounded-lg hover:bg-primary-600 transition-colors shadow-sm">
          <i class="fas fa-paper-plane mr-2"></i>
          Publish
        </button>
      </div>
    </div>

    <!-- User Info -->
    <div class="flex items-center space-x-3 mb-6">
      <div class="w-12 h-12 rounded-full bg-primary-500 flex items-center justify-center text-white font-bold">
        JD
      </div>
      <div>
        <h3 class="font-semibold text-dark-900">John Doe</h3>
        <div class="flex items-center text-dark-500 text-sm">
          <i class="fas fa-globe-americas mr-1.5"></i>
          <select class="bg-transparent border-none focus:ring-0 p-0 pr-6 text-dark-500">
            <option>Public</option>
            <option>Friends Only</option>
            <option>Private</option>
          </select>
          <i class="fas fa-chevron-down ml-1 text-xs"></i>
        </div>
      </div>
    </div>

    <!-- Post Content -->
    <div class="mb-6">
      <textarea
        placeholder="What's on your mind?"
        class="w-full border-none bg-dark-50 rounded-xl p-4 min-h-[120px] focus:ring-2 focus:ring-primary-500 focus:bg-white transition-all resize-none"
      ></textarea>
    </div>

    <!-- Upload Area -->
    <div class="border-2 border-dashed border-dark-200 rounded-xl p-8 mb-6 text-center">
      <div class="mb-4">
        <i class="fas fa-cloud-upload-alt text-4xl text-dark-400"></i>
      </div>
      <h4 class="font-semibold text-dark-800 mb-2">Drag and drop media here</h4>
      <p class="text-dark-500 text-sm mb-4">Support for images and videos</p>
      <button class="bg-primary-500 text-white px-6 py-2.5 rounded-full hover:bg-primary-600 transition-colors shadow-sm">
        Browse Files
      </button>
    </div>

    <!-- Media Preview (Hidden by default, shown when media is added) -->
    <div class="hidden mb-6">
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <!-- Image 1 -->
        <div class="relative group rounded-xl overflow-hidden shadow-sm">
          <!-- Fallback gradient background with icon -->
          <div class="w-full h-32 bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center">
            <i class="fas fa-mountain text-primary-400 text-4xl"></i>
          </div>
          <div class="absolute inset-0 bg-black/0 group-hover:bg-black/40 transition-colors flex items-center justify-center opacity-0 group-hover:opacity-100">
            <button class="bg-white/80 text-red-500 p-2 rounded-full hover:bg-white transition-all">
              <i class="fas fa-trash"></i>
            </button>
          </div>
        </div>

        <!-- Image 2 -->
        <div class="relative group rounded-xl overflow-hidden shadow-sm">
          <!-- Fallback gradient background with icon -->
          <div class="w-full h-32 bg-gradient-to-br from-secondary-100 to-secondary-200 flex items-center justify-center">
            <i class="fas fa-city text-secondary-400 text-4xl"></i>
          </div>
          <div class="absolute inset-0 bg-black/0 group-hover:bg-black/40 transition-colors flex items-center justify-center opacity-0 group-hover:opacity-100">
            <button class="bg-white/80 text-red-500 p-2 rounded-full hover:bg-white transition-all">
              <i class="fas fa-trash"></i>
            </button>
          </div>
        </div>

        <!-- Add More Button -->
        <div class="relative group">
          <div class="w-full h-32 bg-dark-50 rounded-xl flex items-center justify-center border-2 border-dashed border-dark-200 cursor-pointer hover:bg-dark-100 transition-colors">
            <div class="text-dark-400">
              <i class="fas fa-plus text-xl"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Post Options -->
    <div class="border-t border-dark-100 pt-6">
      <h3 class="font-semibold mb-4 flex items-center">
        <i class="fas fa-plus-circle text-primary-500 mr-2"></i>
        Add to your post
      </h3>

      <div class="flex flex-wrap gap-4 mb-6">
        <button class="flex items-center text-dark-700 hover:text-primary-500 transition-colors">
          <i class="fas fa-image mr-2 text-green-500"></i>
          <span>Photo/Video</span>
        </button>

        <button class="flex items-center text-dark-700 hover:text-primary-500 transition-colors">
          <i class="fas fa-user-tag mr-2 text-blue-500"></i>
          <span>Tag People</span>
        </button>

        <button class="flex items-center text-dark-700 hover:text-primary-500 transition-colors">
          <i class="fas fa-smile mr-2 text-yellow-500"></i>
          <span>Feeling/Activity</span>
        </button>

        <button class="flex items-center text-dark-700 hover:text-primary-500 transition-colors">
          <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
          <span>Location</span>
        </button>

        <button class="flex items-center text-dark-700 hover:text-primary-500 transition-colors">
          <i class="fas fa-hashtag mr-2 text-purple-500"></i>
          <span>Tags</span>
        </button>
      </div>

      <!-- Submit Buttons -->
      <div class="flex justify-end space-x-3">
        <button class="px-6 py-2.5 border border-dark-200 text-dark-700 rounded-full hover:bg-dark-50 transition-colors">
          Save Draft
        </button>
        <button class="px-6 py-2.5 bg-primary-500 text-white rounded-full hover:bg-primary-600 transition-colors">
          Post Now
        </button>
      </div>
    </div>
  </div>

  <!-- Post Settings -->
  <div class="bg-white rounded-2xl shadow-sm overflow-hidden mb-6">
    <div class="p-6">
      <h2 class="text-xl font-semibold mb-4 flex items-center">
        <i class="fas fa-cog text-primary-500 mr-2"></i>
        Post Settings
      </h2>

      <div class="space-y-5">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium text-dark-900">Allow Comments</h3>
            <p class="text-dark-500 text-sm">Let people comment on this post</p>
          </div>

          <label class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" value="" class="sr-only peer" checked>
            <div class="w-11 h-6 bg-dark-200 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-dark-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-500"></div>
          </label>
        </div>

        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium text-dark-900">Show Like Count</h3>
            <p class="text-dark-500 text-sm">Show the number of likes on this post</p>
          </div>

          <label class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" value="" class="sr-only peer" checked>
            <div class="w-11 h-6 bg-dark-200 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-dark-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-500"></div>
          </label>
        </div>

        <div class="flex items-center justify-between">
          <div>
            <h3 class="font-medium text-dark-900">Advanced Settings</h3>
            <p class="text-dark-500 text-sm">Hide from profile, limit audience, etc.</p>
          </div>

          <button class="text-primary-500 hover:text-primary-600 p-2 rounded-full hover:bg-dark-50 transition-colors">
            <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Post Preview -->
  <div class="bg-white rounded-2xl shadow-sm overflow-hidden mb-6">
    <div class="p-6">
      <h2 class="text-xl font-semibold mb-4 flex items-center">
        <i class="fas fa-eye text-primary-500 mr-2"></i>
        Preview
      </h2>

      <div class="border border-dark-100 rounded-xl overflow-hidden">
        <!-- Post Header -->
        <div class="bg-white p-4">
          <div class="flex items-center space-x-3 mb-3">
            <div class="w-10 h-10 rounded-full bg-primary-500 flex items-center justify-center text-white font-bold">
              JD
            </div>
            <div>
              <h4 class="font-semibold text-dark-900">John Doe</h4>
              <p class="text-dark-500 text-xs">Just now • <i class="fas fa-globe-americas"></i></p>
            </div>
          </div>

          <!-- Post Content -->
          <p class="mb-3 text-dark-800">What's on your mind?</p>

          <!-- Post Image -->
          <div class="rounded-xl overflow-hidden mb-3">
            <div class="w-full h-48 md:h-64 bg-gradient-to-br from-primary-100 to-secondary-100 flex items-center justify-center">
              <i class="fas fa-image text-4xl text-primary-300"></i>
            </div>
          </div>

          <!-- Post Stats -->
          <div class="flex justify-between items-center text-dark-500 text-sm">
            <div>
              <span>0 likes</span>
            </div>

            <div>
              <span>0 comments • 0 shares</span>
            </div>
          </div>
        </div>

        <!-- Post Actions -->
        <div class="bg-dark-50 px-4 py-2 flex justify-between border-t border-dark-100">
          <button class="flex items-center text-dark-500 hover:text-primary-500 transition-colors py-2">
            <i class="far fa-thumbs-up mr-2"></i>
            <span>Like</span>
          </button>

          <button class="flex items-center text-dark-500 hover:text-primary-500 transition-colors py-2">
            <i class="far fa-comment mr-2"></i>
            <span>Comment</span>
          </button>

          <button class="flex items-center text-dark-500 hover:text-primary-500 transition-colors py-2">
            <i class="far fa-share-square mr-2"></i>
            <span>Share</span>
          </button>
      </div>
    </div>
  </div>

  <!-- Final Action Buttons -->
  <div class="flex justify-end space-x-3 mb-10">
    <button class="px-6 py-2.5 border border-dark-200 text-dark-700 rounded-full hover:bg-dark-50 transition-colors">
      Cancel
    </button>
    <button class="px-6 py-2.5 bg-primary-500 text-white rounded-full hover:bg-primary-600 transition-colors shadow-sm">
      <i class="fas fa-paper-plane mr-2"></i>
      Publish Post
    </button>
  </div>
