<div class="max-w-3xl mx-auto">
  <!-- Create Post Header -->
  <div class="card mb-6">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Create Post</h1>
      
      <div>
        <button class="btn bg-white border border-gray-200 text-gray-700 hover:bg-gray-50 mr-2">
          <i class="fas fa-save mr-2"></i>
          Save Draft
        </button>
        <button class="btn btn-primary">
          <i class="fas fa-paper-plane mr-2"></i>
          Publish
        </button>
      </div>
    </div>
    
    <div class="flex items-center space-x-3 mb-6">
      <img src="https://i.pravatar.cc/150?img=11" alt="Profile" class="avatar h-12 w-12">
      <div>
        <h3 class="font-semibold">John Doe</h3>
        <select class="text-sm text-gray-500 bg-transparent border-none focus:ring-0 p-0 pr-6">
          <option>Public</option>
          <option>Friends Only</option>
          <option>Private</option>
        </select>
      </div>
    </div>
    
    <div class="mb-6">
      <textarea 
        placeholder="What's on your mind?" 
        class="w-full border-none focus:ring-0 text-lg resize-none h-32 p-0"
      ></textarea>
    </div>
    
    <!-- Upload Area -->
    <div class="border-2 border-dashed border-gray-300 rounded-xl p-8 mb-6 text-center">
      <div class="flex flex-col items-center">
        <div class="text-gray-400 mb-4">
          <i class="fas fa-cloud-upload-alt text-5xl"></i>
        </div>
        <h3 class="font-semibold text-gray-700 mb-2">Drag and drop files here</h3>
        <p class="text-gray-500 text-sm mb-4">or click to browse from your computer</p>
        <button class="btn btn-primary">
          <i class="fas fa-plus mr-2"></i>
          Add Media
        </button>
      </div>
    </div>
    
    <!-- Media Preview (Hidden by default, shown when media is added) -->
    <div class="hidden mb-6">
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <div class="relative group">
          <img src="https://source.unsplash.com/random/300x300/?nature" alt="Preview" class="w-full h-32 object-cover rounded-lg">
          <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
            <button class="text-white hover:text-red-500">
              <i class="fas fa-trash"></i>
            </button>
          </div>
        </div>
        
        <div class="relative group">
          <img src="https://source.unsplash.com/random/300x300/?city" alt="Preview" class="w-full h-32 object-cover rounded-lg">
          <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
            <button class="text-white hover:text-red-500">
              <i class="fas fa-trash"></i>
            </button>
          </div>
        </div>
        
        <div class="relative group">
          <div class="w-full h-32 bg-gray-100 rounded-lg flex items-center justify-center">
            <div class="text-gray-400">
              <i class="fas fa-plus text-xl"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Additional Options -->
    <div class="border-t border-gray-100 pt-6">
      <h3 class="font-semibold mb-4">Add to your post</h3>
      
      <div class="flex flex-wrap gap-3">
        <button class="btn bg-white border border-gray-200 text-gray-700 hover:bg-gray-50">
          <i class="fas fa-image text-green-500 mr-2"></i>
          Photo/Video
        </button>
        
        <button class="btn bg-white border border-gray-200 text-gray-700 hover:bg-gray-50">
          <i class="fas fa-user-tag text-blue-500 mr-2"></i>
          Tag People
        </button>
        
        <button class="btn bg-white border border-gray-200 text-gray-700 hover:bg-gray-50">
          <i class="fas fa-smile text-yellow-500 mr-2"></i>
          Feeling/Activity
        </button>
        
        <button class="btn bg-white border border-gray-200 text-gray-700 hover:bg-gray-50">
          <i class="fas fa-map-marker-alt text-red-500 mr-2"></i>
          Check In
        </button>
        
        <button class="btn bg-white border border-gray-200 text-gray-700 hover:bg-gray-50">
          <i class="fas fa-poll text-purple-500 mr-2"></i>
          Poll
        </button>
      </div>
    </div>
  </div>
  
  <!-- Post Settings -->
  <div class="card mb-6">
    <h2 class="text-xl font-semibold mb-4">Post Settings</h2>
    
    <div class="space-y-4">
      <div class="flex items-center justify-between">
        <div>
          <h3 class="font-medium">Allow Comments</h3>
          <p class="text-gray-500 text-sm">Let people comment on this post</p>
        </div>
        
        <label class="relative inline-flex items-center cursor-pointer">
          <input type="checkbox" value="" class="sr-only peer" checked>
          <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-500"></div>
        </label>
      </div>
      
      <div class="flex items-center justify-between">
        <div>
          <h3 class="font-medium">Show Like Count</h3>
          <p class="text-gray-500 text-sm">Show the number of likes on this post</p>
        </div>
        
        <label class="relative inline-flex items-center cursor-pointer">
          <input type="checkbox" value="" class="sr-only peer" checked>
          <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-500"></div>
        </label>
      </div>
      
      <div class="flex items-center justify-between">
        <div>
          <h3 class="font-medium">Advanced Settings</h3>
          <p class="text-gray-500 text-sm">Hide from profile, limit audience, etc.</p>
        </div>
        
        <button class="text-primary-500 hover:text-primary-600">
          <i class="fas fa-chevron-right"></i>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Post Preview -->
  <div class="card mb-6">
    <h2 class="text-xl font-semibold mb-4">Preview</h2>
    
    <div class="border border-gray-200 rounded-xl p-4">
      <div class="flex justify-between items-start mb-4">
        <div class="flex items-center space-x-3">
          <img src="https://i.pravatar.cc/150?img=11" alt="Profile" class="avatar h-10 w-10">
          <div>
            <h4 class="font-semibold">John Doe</h4>
            <p class="text-gray-500 text-sm">Just now • <i class="fas fa-globe-americas"></i></p>
          </div>
        </div>
        
        <button class="text-gray-500 hover:text-gray-700">
          <i class="fas fa-ellipsis-h"></i>
        </button>
      </div>
      
      <div class="mb-4">
        <p class="mb-3">What's on your mind?</p>
      </div>
      
      <div class="flex justify-between items-center mb-4 text-sm">
        <div class="flex items-center space-x-2">
          <div class="flex -space-x-1">
            <div class="w-6 h-6 rounded-full bg-primary-500 flex items-center justify-center text-white">
              <i class="fas fa-thumbs-up text-xs"></i>
            </div>
          </div>
          <span class="text-gray-500">0 likes</span>
        </div>
        
        <div class="text-gray-500">
          <span>0 comments</span>
          <span class="mx-1">•</span>
          <span>0 shares</span>
        </div>
      </div>
      
      <div class="border-t border-gray-100 pt-3 flex justify-between">
        <button class="flex items-center text-gray-500 hover:text-primary-500 px-3 py-1 rounded-lg hover:bg-gray-100">
          <i class="fas fa-thumbs-up mr-2"></i>
          <span>Like</span>
        </button>
        
        <button class="flex items-center text-gray-500 hover:text-primary-500 px-3 py-1 rounded-lg hover:bg-gray-100">
          <i class="fas fa-comment mr-2"></i>
          <span>Comment</span>
        </button>
        
        <button class="flex items-center text-gray-500 hover:text-primary-500 px-3 py-1 rounded-lg hover:bg-gray-100">
          <i class="fas fa-share mr-2"></i>
          <span>Share</span>
        </button>
      </div>
    </div>
  </div>
  
  <div class="flex justify-end space-x-3 mb-10">
    <button class="btn bg-white border border-gray-200 text-gray-700 hover:bg-gray-50">
      Cancel
    </button>
    <button class="btn btn-primary">
      <i class="fas fa-paper-plane mr-2"></i>
      Publish Post
    </button>
  </div>
</div>
