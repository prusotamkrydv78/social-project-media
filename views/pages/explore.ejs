<div class="max-w-6xl mx-auto">
  <!-- Explore Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold mb-3 bg-gradient-to-r from-primary-500 to-secondary-500 text-transparent bg-clip-text">Explore</h1>
    <p class="text-dark-500">Discover new content, people, and trends</p>
  </div>

  <!-- Categories -->
  <div class="flex overflow-x-auto space-x-3 pb-4 mb-8 custom-scrollbar">
    <button class="flex flex-col items-center justify-center px-6 py-3 bg-gradient-to-r from-primary-500 to-secondary-500 text-white rounded-xl whitespace-nowrap shadow-md hover:shadow-lg transition-all">
      <i class="fas fa-fire text-xl mb-1"></i>
      <span class="text-sm font-medium">Trending</span>
    </button>
    <button class="flex flex-col items-center justify-center px-6 py-3 bg-white border border-dark-100 text-dark-700 rounded-xl whitespace-nowrap shadow-sm hover:shadow hover:bg-dark-50 transition-all">
      <i class="fas fa-image text-xl mb-1"></i>
      <span class="text-sm font-medium">Photos</span>
    </button>
    <button class="flex flex-col items-center justify-center px-6 py-3 bg-white border border-dark-100 text-dark-700 rounded-xl whitespace-nowrap shadow-sm hover:shadow hover:bg-dark-50 transition-all">
      <i class="fas fa-video text-xl mb-1"></i>
      <span class="text-sm font-medium">Videos</span>
    </button>
    <button class="flex flex-col items-center justify-center px-6 py-3 bg-white border border-dark-100 text-dark-700 rounded-xl whitespace-nowrap shadow-sm hover:shadow hover:bg-dark-50 transition-all">
      <i class="fas fa-music text-xl mb-1"></i>
      <span class="text-sm font-medium">Music</span>
    </button>
    <button class="flex flex-col items-center justify-center px-6 py-3 bg-white border border-dark-100 text-dark-700 rounded-xl whitespace-nowrap shadow-sm hover:shadow hover:bg-dark-50 transition-all">
      <i class="fas fa-utensils text-xl mb-1"></i>
      <span class="text-sm font-medium">Food</span>
    </button>
    <button class="flex flex-col items-center justify-center px-6 py-3 bg-white border border-dark-100 text-dark-700 rounded-xl whitespace-nowrap shadow-sm hover:shadow hover:bg-dark-50 transition-all">
      <i class="fas fa-palette text-xl mb-1"></i>
      <span class="text-sm font-medium">Art</span>
    </button>
    <button class="flex flex-col items-center justify-center px-6 py-3 bg-white border border-dark-100 text-dark-700 rounded-xl whitespace-nowrap shadow-sm hover:shadow hover:bg-dark-50 transition-all">
      <i class="fas fa-dumbbell text-xl mb-1"></i>
      <span class="text-sm font-medium">Fitness</span>
    </button>
    <button class="flex flex-col items-center justify-center px-6 py-3 bg-white border border-dark-100 text-dark-700 rounded-xl whitespace-nowrap shadow-sm hover:shadow hover:bg-dark-50 transition-all">
      <i class="fas fa-laptop-code text-xl mb-1"></i>
      <span class="text-sm font-medium">Technology</span>
    </button>
    <button class="flex flex-col items-center justify-center px-6 py-3 bg-white border border-dark-100 text-dark-700 rounded-xl whitespace-nowrap shadow-sm hover:shadow hover:bg-dark-50 transition-all">
      <i class="fas fa-plane text-xl mb-1"></i>
      <span class="text-sm font-medium">Travel</span>
    </button>
  </div>

  <!-- Trending Topics -->
  <div class="mb-10">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold">Trending Topics</h2>
      <a href="#" class="text-primary-500 hover:text-primary-600 font-medium flex items-center">
        <span>See all</span>
        <i class="fas fa-chevron-right ml-1 text-xs"></i>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="bg-gradient-to-br from-blue-500 to-blue-600 text-white rounded-2xl p-6 relative overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 cursor-pointer">
        <div class="relative z-10">
          <div class="inline-block bg-white/20 backdrop-blur-sm text-white text-xs font-medium px-3 py-1 rounded-full mb-3">Technology</div>
          <div class="text-2xl font-bold mb-3">#AIRevolution</div>
          <div class="flex items-center text-white/80 text-sm">
            <i class="fas fa-chart-line mr-2"></i>
            <span>24.5K posts</span>
          </div>
        </div>
        <div class="absolute -bottom-6 -right-6 opacity-20 text-white transform rotate-12">
          <i class="fas fa-microchip text-9xl"></i>
        </div>
      </div>

      <div class="bg-gradient-to-br from-purple-500 to-purple-600 text-white rounded-2xl p-6 relative overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 cursor-pointer">
        <div class="relative z-10">
          <div class="inline-block bg-white/20 backdrop-blur-sm text-white text-xs font-medium px-3 py-1 rounded-full mb-3">Sports</div>
          <div class="text-2xl font-bold mb-3">#OlympicGames</div>
          <div class="flex items-center text-white/80 text-sm">
            <i class="fas fa-chart-line mr-2"></i>
            <span>18.2K posts</span>
          </div>
        </div>
        <div class="absolute -bottom-6 -right-6 opacity-20 text-white transform rotate-12">
          <i class="fas fa-medal text-9xl"></i>
        </div>
      </div>

      <div class="bg-gradient-to-br from-pink-500 to-pink-600 text-white rounded-2xl p-6 relative overflow-hidden shadow-lg hover:shadow-xl transition-all hover:-translate-y-1 cursor-pointer">
        <div class="relative z-10">
          <div class="inline-block bg-white/20 backdrop-blur-sm text-white text-xs font-medium px-3 py-1 rounded-full mb-3">Entertainment</div>
          <div class="text-2xl font-bold mb-3">#MovieAwards</div>
          <div class="flex items-center text-white/80 text-sm">
            <i class="fas fa-chart-line mr-2"></i>
            <span>12.7K posts</span>
          </div>
        </div>
        <div class="absolute -bottom-6 -right-6 opacity-20 text-white transform rotate-12">
          <i class="fas fa-film text-9xl"></i>
        </div>
      </div>
    </div>
  </div>

  <!-- Popular Creators -->
  <div class="mb-10">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold">Popular Creators</h2>
      <a href="#" class="text-primary-500 hover:text-primary-600 font-medium flex items-center">
        <span>View All</span>
        <i class="fas fa-chevron-right ml-1 text-xs"></i>
      </a>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <% for (let i = 1; i <= 4; i++) { %>
        <div class="bg-white rounded-2xl p-5 shadow-sm hover:shadow-md transition-all text-center relative overflow-hidden group">
          <!-- Background pattern -->
          <div class="absolute inset-0 bg-gradient-to-br from-<%= ['blue', 'purple', 'pink', 'green'][i % 4] %>-50 to-<%= ['blue', 'purple', 'pink', 'green'][i % 4] %>-100 opacity-10 group-hover:opacity-20 transition-opacity"></div>

          <div class="relative">
            <!-- Avatar -->
            <div class="relative mx-auto mb-4 inline-block">
              <div class="w-24 h-24 rounded-full bg-gradient-to-r from-<%= ['blue', 'purple', 'pink', 'green'][i % 4] %>-500 to-<%= ['blue', 'purple', 'pink', 'green'][(i+1) % 4] %>-500 flex items-center justify-center p-0.5">
                <img src="https://ui-avatars.com/api/?name=Creator+<%= i %>&background=<%= ['0D8ABC', '8B5CF6', '10B981', 'F59E0B'][i % 4] %>&color=fff&size=96" alt="Creator <%= i %>" class="avatar w-full h-full rounded-full">
              </div>
              <div class="absolute rounded-full bottom-0 right-0 bg-<%= ['blue', 'purple', 'pink', 'green'][i % 4] %>-500 text-white rounded-full w-7 h-7 flex items-center justify-center text-xs border-2 border-white shadow-md">
                <i class="fas fa-check"></i>
              </div>
            </div>

            <!-- Creator Info -->
            <h3 class="font-bold text-lg mb-1">Creator <%= i %></h3>
            <p class="text-dark-500 text-sm mb-3">@creator<%= i %></p>

            <!-- Stats -->
            <div class="flex justify-center space-x-4 text-center text-sm mb-4">
              <div>
                <div class="font-bold text-dark-900"><%= Math.floor(Math.random() * 500) + 100 %>K</div>
                <div class="text-dark-500 text-xs">Followers</div>
              </div>
              <div>
                <div class="font-bold text-dark-900"><%= Math.floor(Math.random() * 1000) + 200 %></div>
                <div class="text-dark-500 text-xs">Posts</div>
              </div>
            </div>

            <!-- Follow Button -->
            <button class="w-full py-2 px-4 rounded-xl bg-<%= ['blue', 'purple', 'pink', 'green'][i % 4] %>-500 hover:bg-<%= ['blue', 'purple', 'pink', 'green'][i % 4] %>-600 text-white font-medium transition-colors shadow-sm hover:shadow">
              <i class="fas fa-user-plus mr-2"></i>Follow
            </button>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Explore Photos -->
  <div class="mb-10">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold">Explore Photos</h2>
      <div class="flex items-center">
        <div class="flex space-x-2 mr-4">
          <button class="w-10 h-10 rounded-xl bg-white border border-dark-100 text-dark-700 hover:bg-dark-50 flex items-center justify-center shadow-sm">
            <i class="fas fa-th-large"></i>
          </button>
          <button class="w-10 h-10 rounded-xl bg-primary-500 text-white flex items-center justify-center shadow-sm">
            <i class="fas fa-th"></i>
          </button>
        </div>
        <a href="#" class="text-primary-500 hover:text-primary-600 font-medium flex items-center">
          <span>View All</span>
          <i class="fas fa-chevron-right ml-1 text-xs"></i>
        </a>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
      <% for (let i = 1; i <= 12; i++) { %>
        <div class="relative group rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all <%= i % 5 === 0 ? 'md:col-span-2 md:row-span-2' : '' %>">
          <!-- Image -->
          <img
            src="https://picsum.photos/<%= i % 5 === 0 ? '600' : '400' %>/<%= i % 5 === 0 ? '600' : '400' %>?random=<%= i + 20 %>"
            alt="Explore Image"
            class="w-full h-full object-cover <%= i % 5 === 0 ? 'aspect-square md:aspect-auto' : 'aspect-square' %>"
          >

          <!-- Overlay on hover -->
          <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col justify-between p-4">
            <!-- Top actions -->
            <div class="flex justify-end">
              <button class="text-white hover:text-primary-400 bg-black/30 backdrop-blur-sm rounded-full w-9 h-9 flex items-center justify-center transform translate-y-2 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                <i class="fas fa-bookmark"></i>
              </button>
            </div>

            <!-- Bottom content -->
            <div class="transform translate-y-2 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
              <!-- User info -->
              <div class="flex items-center space-x-2 mb-3">
                <img src="https://ui-avatars.com/api/?name=User+<%= i %>&background=<%= ['0D8ABC', '8B5CF6', '10B981', 'F59E0B', 'EF4444', '6366F1'][i % 6] %>&color=fff&size=32" alt="User" class="avatar w-8 h-8 border-2 border-white">
                <span class="text-white font-medium">User <%= i %></span>
              </div>

              <!-- Engagement stats -->
              <div class="text-white flex justify-between items-center">
                <div class="flex space-x-4">
                  <button class="hover:text-primary-400 flex items-center space-x-1 transition-colors">
                    <i class="fas fa-heart"></i>
                    <span><%= Math.floor(Math.random() * 1000) %></span>
                  </button>
                  <button class="hover:text-primary-400 flex items-center space-x-1 transition-colors">
                    <i class="fas fa-comment"></i>
                    <span><%= Math.floor(Math.random() * 100) %></span>
                  </button>
                </div>
                <button class="hover:text-primary-400 bg-white/10 backdrop-blur-sm rounded-full w-8 h-8 flex items-center justify-center transition-colors">
                  <i class="fas fa-share-alt"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <div class="mt-6 text-center">
      <button class="btn btn-primary px-6">
        Load More
      </button>
    </div>
  </div>
</div>
