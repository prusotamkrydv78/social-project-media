<!-- Forgot Password Form -->
<div class="text-center mb-6">
  <h1 class="text-2xl font-bold bg-gradient-to-r from-primary-500 to-secondary-500 text-transparent bg-clip-text">Forgot Password</h1>
  <p class="text-dark-500 mt-1 text-sm">Enter your email to receive a password reset link</p>
</div>

<form class="space-y-4">
  <!-- Email Input -->
  <div>
    <label for="email" class="block text-sm font-medium text-dark-700 mb-1">Email Address</label>
    <div class="relative">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-dark-400">
        <i class="fas fa-envelope"></i>
      </div>
      <input 
        type="email" 
        id="email" 
        name="email" 
        class="w-full pl-10 pr-4 py-2.5 border border-dark-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
        placeholder="Enter your email"
        required
      >
    </div>
  </div>
  
  <!-- Submit Button -->
  <button 
    type="submit" 
    class="w-full py-2.5 px-4 bg-gradient-to-r from-primary-500 to-secondary-500 text-white font-medium rounded-xl hover:shadow-lg transition-all duration-200"
  >
    Send Reset Link
  </button>
  
  <!-- Back to Login Link -->
  <div class="text-center mt-4">
    <p class="text-dark-600">
      Remember your password? 
      <a href="/login" class="text-primary-500 hover:text-primary-600 font-medium">Back to login</a>
    </p>
  </div>
</form>

<!-- Information Box -->
<div class="mt-8 bg-primary-50 border border-primary-100 rounded-xl p-4">
  <div class="flex items-start">
    <div class="flex-shrink-0 pt-0.5">
      <i class="fas fa-info-circle text-primary-500"></i>
    </div>
    <div class="ml-3">
      <h3 class="text-sm font-medium text-primary-800">What happens next?</h3>
      <div class="mt-1 text-sm text-primary-700">
        <p>We'll send a password reset link to your email. The link will expire in 30 minutes for security reasons.</p>
      </div>
    </div>
  </div>
</div>
