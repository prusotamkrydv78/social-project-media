<div class="min-h-screen flex items-center justify-center bg-dark-900 relative">
  <!-- Close Button -->
  <a href="/" class="absolute top-4 right-4 z-20 text-white/80 hover:text-white transition-colors">
    <i class="fas fa-times text-2xl"></i>
  </a>
  
  <!-- Story Navigation -->
  <div class="absolute top-1/2 left-4 transform -translate-y-1/2 z-20">
    <button class="w-10 h-10 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center text-white hover:bg-white/30 transition-colors">
      <i class="fas fa-chevron-left"></i>
    </button>
  </div>
  
  <div class="absolute top-1/2 right-4 transform -translate-y-1/2 z-20">
    <button class="w-10 h-10 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center text-white hover:bg-white/30 transition-colors">
      <i class="fas fa-chevron-right"></i>
    </button>
  </div>
  
  <!-- Story Container -->
  <div class="w-full max-w-md aspect-[9/16] bg-dark-800 relative overflow-hidden rounded-xl shadow-2xl">
    <!-- Story Progress Bar -->
    <div class="absolute top-0 left-0 right-0 z-10 p-2 flex space-x-1">
      <% for(let i = 0; i < 3; i++) { %>
        <div class="h-1 bg-white/30 rounded-full flex-1 overflow-hidden">
          <div class="h-full bg-white <%= i === 0 ? 'animate-progress' : '' %>" style="width: <%= i === 0 ? '0%' : (i < 0 ? '100%' : '0%') %>"></div>
        </div>
      <% } %>
    </div>
    
    <!-- Story Content -->
    <div class="w-full h-full">
      <img src="https://picsum.photos/1080/1920?random=1" alt="Story" class="w-full h-full object-cover">
      
      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-black/20"></div>
    </div>
    
    <!-- Story Header -->
    <div class="absolute top-0 left-0 right-0 p-4 pt-8 z-10 flex items-center">
      <div class="w-10 h-10 rounded-full border-2 border-primary-500 overflow-hidden">
        <div class="w-full h-full bg-primary-500 flex items-center justify-center text-white font-bold">
          JD
        </div>
      </div>
      <div class="ml-2">
        <p class="text-white text-sm font-medium">John Doe</p>
        <p class="text-white/70 text-xs">2 hours ago</p>
      </div>
      <div class="ml-auto">
        <button class="text-white/80 hover:text-white transition-colors">
          <i class="fas fa-ellipsis-h"></i>
        </button>
      </div>
    </div>
    
    <!-- Story Caption -->
    <div class="absolute bottom-0 left-0 right-0 p-4 z-10">
      <p class="text-white text-lg">Beautiful sunset at the beach today! ðŸŒ… #summer #vacation</p>
      
      <!-- Story Actions -->
      <div class="flex items-center justify-between mt-6">
        <div class="flex items-center space-x-2">
          <div class="flex -space-x-1">
            <div class="w-6 h-6 rounded-full bg-primary-500 flex items-center justify-center text-white text-xs font-bold border border-white">
              U1
            </div>
            <div class="w-6 h-6 rounded-full bg-secondary-500 flex items-center justify-center text-white text-xs font-bold border border-white">
              U2
            </div>
            <div class="w-6 h-6 rounded-full bg-purple-500 flex items-center justify-center text-white text-xs font-bold border border-white">
              U3
            </div>
          </div>
          <span class="text-white/80 text-sm">+42 views</span>
        </div>
        
        <div class="flex items-center space-x-4">
          <button class="text-white/80 hover:text-white transition-colors">
            <i class="far fa-heart"></i>
          </button>
          <button class="text-white/80 hover:text-white transition-colors">
            <i class="far fa-comment"></i>
          </button>
          <button class="text-white/80 hover:text-white transition-colors">
            <i class="far fa-paper-plane"></i>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Reply Input -->
    <div class="absolute bottom-0 left-0 right-0 p-4 pb-6 z-10">
      <div class="relative mt-16">
        <input 
          type="text" 
          placeholder="Reply to story..." 
          class="w-full bg-white/20 backdrop-blur-md text-white placeholder-white/60 border-0 rounded-full py-3 pl-4 pr-12 focus:ring-2 focus:ring-white/30"
        >
        <button class="absolute right-2 top-1/2 transform -translate-y-1/2 text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-white/20 transition-colors">
          <i class="fas fa-paper-plane"></i>
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes progress {
    from { width: 0%; }
    to { width: 100%; }
  }
  
  .animate-progress {
    animation: progress 5s linear forwards;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Auto-advance to next story after 5 seconds
    setTimeout(() => {
      // In a real app, this would navigate to the next story
      console.log('Moving to next story...');
    }, 5000);
  });
</script>
